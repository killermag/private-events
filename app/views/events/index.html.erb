<section class="section">
    <div class="container">
        <div class="columns">
            <% if Event.upcoming.any? %> 
                <% Event.upcoming.each do |event| %>
                    <div class="column is-4">
                        <div class="box">
                            <p class="subtitle"> <%= event.description %> </p>
                            <hr class="navbar-divider">
                            <p class="helper"> <%= event.date %> </p>
                        </div>
                    </div>
                <% end %>
            <% end %>   
        </div>
    </div>
</section>