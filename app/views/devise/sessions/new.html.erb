

<section class="section">
    <div class="container">
        <div class="columns is-centered">
            <div class="column is-5">
              <h2>Log in</h2>

              <%= form_for(resource, as: resource_name, url: new_user_session_path()) do |f| %>
                <div class="field">
                  <%= f.label :username, class: 'label' %>
                  <div class="control">
                    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: 'input' %>
                  </div>
                </div>

                <div class="field">
                  <%= f.label :password, class: 'label' %>
                  <div class="control">
                    <%= f.password_field :password, autocomplete: "current-password", class: 'input' %>
                  </div>
                </div>

                <% if devise_mapping.rememberable? %>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                    <% if alert %>
                        <p class="help is-danger"> <%= alert %> </p>
                    <% end %>
                  </div>
                <% end %>

                <div class="actions control">
                  <%= f.submit "Log in", class: 'button is-light' %>
                </div>
              <% end %>

              <%= render "devise/shared/links" %>
            </div>
        </div>
    </div>
</section>
