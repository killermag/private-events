<!DOCTYPE html>
<html>
  <head>
    <title>Prodigy</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar has-shadow is-white">
      <div class="navbar-brand">
        <%= link_to root_path, class: 'navbar-item' do %> 
          <p class="has-text-dark has-text-weight-bold is-size-5">Private-Events</p>
        <% end %> 
        
        <div class="navbar-burger" id="burger" >
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>


      <div class="navbar-menu" id="menu">
        <div class="navbar-end">
            <%= link_to "New event", new_event_path, class: 'navbar-item' %> 
            <% if !user_signed_in? %> 
            
              
            <%= link_to "Sign up", new_user_registration_path, class: 'navbar-item' %> 
            <%= link_to "Sign in", new_user_session_path, class: 'navbar-item' %> 
          
            <% else %> 
            <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: 'navbar-item' %> 
            <%= link_to 'My profile', user_path(current_user) , class: 'navbar-item' %>
            <% end >%> 
          
        </div>
      </div>

    </nav>
    <% if notice %>
      <div class="notification-global has-text-centered"> <p class="is-family-sans-serif has-text-success"> <%= notice %> </p> </div>
    <% end %>
    
    <% if alert %>
      <div class="notification-global has-text-centered"> <p class="is-family-sans-serif has-text-danger"> <%= alert %> </p> </div>
    <% end %>
    <%= yield %>

    <script type="text/javascript">
      const burgers = document.querySelector("#burger");
      const menu = document.querySelector("#menu");

      burgers.addEventListener('click', () => {
        menu.classList.toggle('is-active')
      })
    </script>
  </body>
</html>

